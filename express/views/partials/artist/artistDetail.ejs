  <div class="container" ng-controller="ArtistDetailCtrl">
    <div class="row">
      <div class="col-md-10">
	<h1>{{artist.name}}</h1>
      </div>
    <div class="col-md-2">
      <a ng-href="#/artists">[Back to Artists]</a>
    </div>
  </div>
  <form class="form-horizontal" role="form" ng-submit="save()">
    <div class="row">
      <div class="col-md-8">
	<input type="text" ng-model="searchSong" class="search-query" placeHolder="Search"/>
	<ul class="unstyled">
	  <li ng-repeat="song in songs | filter:searchSong | orderBy:'name'">
	    <input type="checkbox" id="remove-{{song.id}}" ng-model="song.isSelected" ng-change="songChecked(song)"/>
	    <a ng-href="{{song.file_path}}">{{song.name}}</a>
          </li>
	</ul>
      </div>
      <div class="col-md-4">
	<legend>Playlists</legend>
	<fieldset>
	  <ul class="unstyled">
	    <li ng-repeat="playlist in playlists | orderBy:'name'">
	      <input type="radio" ng-model="selectedValue" value="playlist.name" ng-click="playlistSelected(playlist)"/>
	      <span>{{playlist.name}}</span>
	    </li>
	  </ul>
	  <hr/>
	  <input type="submit" class="btn btn-primary" id="addSongsToPlaylist" value="Add Songs"/>
	</fieldset>
      </div>
    </div>
  </form>

