  <div class="container" ng-controller="SuggestionCtrl">
    <form class="form-horizontal" role="form" ng-submit="submitSuggestion()">
      <div class="form-group">
	<label class="col-sm-2 control-label" for="from">From:</label>
	<div class="col-sm-5">
	  <input type="text" class="form-control" id="from" name="from" placeHolder="Please tell me who you are" ng-model="from" required autofocus/>
	</div>
      </div>
      <div class="form-group">
	<label class="col-sm-2 control-label" for="message">Message:</label>
	<div class="col-sm-10">
	  <textarea class="input-large form-control" name="message" id="message" cols="20" rows="10" ng-model="message" required/>Give me a suggestion</textarea>
	</div>
      </div>
      <div class="form-group">
	<div class="col-sm-offset-1 col-sm-20">
	  <input type="submit" id="submitSuggestion" value="Suggestion" class="btn btn-primary"/>
	  <a ng-href="#/home" class="btn btn-link">Cancel</a>
	</div>
      </div>
    </form>
  </div>

