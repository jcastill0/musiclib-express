  <div class="container" ng-controller="VideoDetailCtrl">
    <form class="form-horizontal" role="form" ng-submit="save()">
      <div class="form-group">
	<label class="col-sm-2 control-label" for="inputName">Video *</label>
	<div class="col-sm-5">
	  <input type="text" class="form-control" id="inputName" placeHolder="Give the Video a name" name="VideoName" ng-model="name" required/>
	</div>
      </div>
      <div class="form-group">
	<label class="col-sm-2 control-label" for="inputURL">Link *</label>
	<div class="col-sm-10">
	  <input type="text" class="form-control" id="inputURL" placeHolder="URL" name="VideoURL" ng-model="url" required/>
	</div>
      </div>
      <div class="form-group">
	<label class="col-sm-2 control-label" for="inputCode">Embed (Optional)</label>
	<div class="col-sm-10">
	  <input type="text" class="form-control" id="inputCode" placeHolder="Embedded Code" name="VideoEmbed" ng-model="embedded"/>
	</div>
      </div>
      <div class="form-group">
	<label class="col-sm-2 control-label" for="inputArtist">Artist</label>
	<div class="col-sm-5">
	  <select id="inputArtist" class="form-control" ng-model="artistID" ng-options="artist.id as artist.name for artist in artists"/>
	</div>
      </div>
      <div class="form-group">
	<div class="col-sm-10">
	  <input type="submit" id="saveVideo" value="Save" class="btn btn-primary"/>
	  <a ng-href="#/home/">Cancel</a>
	</div>
      </div>
    </form>
  </div>

