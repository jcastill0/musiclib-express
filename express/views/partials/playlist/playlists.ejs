  <div class="container" ng-controller="PlaylistCtrl">
    <div class="row">
      <div class="col-md-1">
      </div>
      <div class="col-md-5">
	<h2>Playlists
	  <a class="btn btn-small btn-info" ng-href="#/playlists/add" data-toggle="tooltip" title="Add"><span class="glyphicon glyphicon-plus-sign"></span></a>
	</h2>
      </div>
      <div class="col-md-6">
      </div>
    </div>
    <div class="row" ng-repeat="playlist in playlists">
      <div class="col-md-1">
      </div>
      <div class="col-md-4">
	{{playlist.name}}
      </div>
      <div class="col-md-1">
	<a class="btn btn-small btn-default" ng-href="#/playlists/play/{{playlist.id}}" data-toggle="tooltip" title="Play"><span class="glyphicon glyphicon-play"></span></a>
      </div>
      <div class="col-md-1">
	<a class="btn btn-small btn-danger" ng-href="#/playlists/delete/{{playlist.id}}" data-toggle="tooltip" title="Delete" id="DeleteActionID" onClick="return confirm('Are you sure you want to delete this playlist?');"><span class="glyphicon glyphicon-remove icon-red"></span></a>
      </div>
      <div class="col-md-1">
	<a class="btn btn-small btn-warning" ng-href="#/playlists/edit/{{playlist.id}}" data-toggle="tooltip" title="Edit"><span class="glyphicon glyphicon-edit"></span></a>
</div>
      <div class="col-md-4">
      </div>
      <hr/>
    </div>
    <div class="row">
      <div class="col-md-1">
      </div>
      <div class="col-md-8">
	<hr/>
      </div>
      <div class="col-md-3">
      </div>
    </div>
  </div>


