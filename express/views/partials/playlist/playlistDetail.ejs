  <div class="container" ng-controller="PlaylistDetailCtrl">
    <form class="form-horizontal" role="form" ng-submit="save()">
      <div class="form-group">
	<label class="col-sm-1 control-label" for="inputName">Playlist</label>
	<div class="col-sm-5">
	  <input type="text" id="inputName" placeHolder="Playlist name" name="PlaylistName" ng-model="playlist.name" required/>
	</div>
	<div class="col-sm-1">
	  <input type="submit" id="updatePlaylist" value="Save" class="btn btn-primary"/>
	</div>
	<div class="col-sm-1">
	  <a ng-href="#/playlists/">Cancel</a>
	</div>
      </div>
    </form>
    <hr/>
    <div class="row">
      <div class="col-md-6">
	<input type="search" ng-model="searchSong" class="rounded search-query" placeHolder="Search"/>
	<hr/>
	<table class="table table-striped table-condensed">
	  <tbody>
	    <tr ng-repeat="song in songs | filter:searchSong | orderBy:'artist'">
	      <td><button class="btn" ng-click="addSong(song)"><span class="glyphicon glyphicon-chevron-right"></span></button></td>
	      <td>{{song.artistName}}</td>
	      <td>{{song.name}}</td>
	    </tr>
	  </tbody>
	</table>
      </div>
      <div class="col-md-6">
	<div class="control-group">
	  <div class="controls">
	    <input type="hidden" id="id_playlistID" name="playlistID" value="{{playlist.id}}">
	  </div>
	  <div class="controls">
	    <input type="search" ng-model="searchSongInPL" class="rounded search-query" placeHolder="Search"/>
	    <hr/>
	    <table class="table table-striped table-condensed">
	      <tbody>
		<tr ng-repeat="song in playlistSongs | filter:searchSongInPL | orderBy:'artist'">
		  <td><button class="btn" ng-click="removeSong(song)"><span class="glyphicon glyphicon-chevron-left"></span></button></td>
		  <td>{{song.artistName}}</td>
		  <td>{{song.name}}</td>
		</tr>
	      </tbody>
	    </table>
	  </div>
	</div>
      </div>
    </div>
  </div>

