  <div class="container" ng-controller="PlayCtrl">
    <div class="row">
      <div class="col-md-6">
	<h1>{{playlist.name}}</h1>
      </div>
      <div class="col-md-2">
	<button class="btn btn-large btn-primary" type="button" ng-show="showPlayButton" ng-click="startPlaying();">Start Playing</button>
      </div>
      <div class="col-md-1">
	<button class="btn btn-large btn-primary" type="button" ng-show="showPlayButton" ng-click="shuffle();">Shuffle</button>
      </div>
      <div class="col-md-1">
	<button class="btn btn-large btn-danger" type="button" ng-show="!showPlayButton" ng-click="stopPlayer();"><span class="glyphicon glyphicon-stop icon-red"></span></button>
      </div>
      <div class="col-md-2">
	<a ng-href="#/playlists" class="btn btn-link">[Back to Playlists]</a>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6">
	<ul class="nav nav-list" id="SongListID">
	  <li class="nav-header">[{{playlistSongs.length}}] Songs</li>
	  <li ng-repeat="song in playlistSongs">
	      <span class="glyphicon glyphicon-music"></span> {{song.artistName}} - {{song.name}}
	  </li>
	</ul>
      </div>
      <div class="col-md-6">
	<h4 id="NowPlayingID">Now Playing: {{currentlyPlaying}}</h4>
	<audio id="AudioPlayerID" name="AudioControl" controls="controls"></audio>
	<div class="container">
	  <textarea rows="10" cols="60" readonly ng-show="hasLyrics()" class="lyrics">{{currentLyrics}}</textarea>
	  <img class="img-rounded" ng-src="./img/music_{{hashValue}}.gif" ng-show="showImage()" width="335px"/>
	</div>
      </div>
    </div>
  </div>


